<Window x:Class="OpenAndCloseAnotherWindow.OtherWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenAndCloseAnotherWindow"
        mc:Ignorable="d"
        Title="OrherWindow" Height="450" Width="800">
    <Grid>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="This is other window" 
                       TextAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="25"/>
            <ToggleButton Height="30" Width="300" Margin="15"
                          Content="Open/Close Another Window With Class"
                          Click="ToggleButtonStatic2_OnClick"/>
        </WrapPanel>
    </Grid>
</Window>
